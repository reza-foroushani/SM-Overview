<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BACHELOR_LAYOUT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFB"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FBFB">

        <TextView
            android:id="@+id/TEXT_VIEW_BACHELOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Bachelor StudiengÃ¤nge"
            android:textSize="30sp" />

        <ListView
            android:id="@+id/ADD_LIST_VIEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TEXT_VIEW_BACHELOR"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ADD_BUTTEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scrollbarSize="20sp"
            android:src="@drawable/ic_add_white_48dp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:fabSize="auto"
            app:maxImageSize="26sp" />

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/SUCHEN2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:ems="10"
                android:hint="Suchen"
                android:inputType="textPersonName" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

