<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical"
    tools:context=".SemesterUebersichtActivity">

    <LinearLayout
        android:id="@+id/DATA_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/STUDIENGANG_TEXTVIEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Platzhalter fÃ¼r Studiengang"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ExpandableListView
            android:id="@+id/MEINE_LISTE"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:divider="@android:drawable/bottom_bar"
            android:dividerHeight="1dp">

        </ExpandableListView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ADDSEMESTER_FLOATINGACTIONBUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="28dp"
            android:clickable="true"
            android:src="@drawable/ic_add_white_48dp"
            app:backgroundTint="#03A9F4"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

    </LinearLayout>
</ScrollView>
