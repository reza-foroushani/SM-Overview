<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".SubHinzufuegenFachbereichMasterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/book_2943383" />

    <EditText
        android:id="@+id/FACHBEREICHNAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fachbereich Name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/BESCHREIBUNG_SUB"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Beschreichbung"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/SPEICHERN_BUTTON"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="30dp"
        android:background="#2196F3"
        android:text="Speichern" />

    <Button
        android:id="@+id/ABBRECHEN_BUTTON"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical|center_horizontal"
        android:background="#E91E63"
        android:text="Abbrechen" />

</LinearLayout>